<form action="/salers/create" method="post">
    <h2>Saler Register</h2>
    <div class="form-group">
        <label for="inputEmail">Email</label>
        <input type="email" name="email" class="form-control" id="inputEmail" placeholder="Enter email" required>
    </div>
    <div class="form-group">
      <label for="inputName">Name</label>
      <input type="text" name="name" class="form-control" id="inputName" placeholder="Enter full name" required>
    </div>
    <div class="form-group">
      <label for="inputAddress">Shop Address</label>
      <input type="text" name="shopAddress" class="form-control" id="inputAddress" placeholder="Enter shop address" required>
    </div>
    
    <div class="card border-primary mb-3">
        <div class="card-header text-white" style="background-color: #00AA9E;">Bank Account</div>
        <div class="card-body">
            <div class="form-group">
                <label for="inputAccountName">Account name</label>
                <input type="text" name="accountName" class="form-control" id="inputAccountName" placeholder="Enter bank account name" required>
            </div>
            <div class="form-group">
                <label for="inputIdentityNum">Identity number</label>
                <input type="text" name="identityNumber" class="form-control" id="inputIdentityNum" placeholder="Enter identity number" maxlength="9" minlength="9" required>
            </div>
            <div class="form-group">
                <label for="inputAccountNum">Account number</label>
                <input type="text" name="accountNumber" class="form-control" id="inputAccountNum" placeholder="Enter account number" maxlength="9" minlength="9" required>
            </div>
            <div class="form-group">
                <label for="inputBank">Bank</label>
                <select name="bank" id="inputBank" class="form-control">
                  <option selected>ViettinBank</option>
                  <option>TechcomBank</option>
                  <option>AgriBank</option>
                  <option>VPBank</option>
                  <option>VietcomBank</option>
                </select>
            </div>
            <div class="form-group">
                <label for="inputRegion">Region</label>
                <select name="region" id="inputRegion" class="form-control">
                  <option selected>Ha Noi</option>
                  <option>Ho Chi Minh</option>
                  <option>Da Nang</option>
                  <option>Hai Phong</option>
                  <option>Nam Dinh</option>
                </select>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>